    <script>
        // Music Player Functionality
        let isPlaying = false;
        let currentSong = null;
        let progressInterval = null;

        // DOM Elements
        const mainPlayBtn = document.getElementById('mainPlayBtn');
        const albumArt = document.getElementById('albumArt');
        const progressFill = document.getElementById('progressFill');
        const currentTimeDisplay = document.getElementById('currentTime');
        const totalTimeDisplay = document.getElementById('totalTime');
        const trackTitle = document.getElementById('trackTitle');
        const trackArtist = document.getElementById('trackArtist');
        const trackGenre = document.getElementById('trackGenre');
        const trackPlan = document.getElementById('trackPlan');
        const demoNotification = document.getElementById('demoNotification');
        const demoAudio = document.getElementById('demoAudio');
        const volumeSlider = document.getElementById('volumeSlider');
        const volumeBtn = document.getElementById('volumeBtn');
        const progressBar = document.getElementById('progressBar');

        // Load a demo song from the database
        async function loadDemoSong() {
            try {
                const response = await fetch('/api/demo-song');
                if (response.ok) {
                    const song = await response.json();
                    currentSong = song;
                    updateTrackInfo(song);
                    demoAudio.src = `/demo-stream/${song._id}`;
                    console.log('Demo song loaded:', song.title);
                } else {
                    console.error('Failed to load demo song');
                    showLoadError();
                }
            } catch (error) {
                console.error('Error loading demo song:', error);
                showLoadError();
            }
        }

        function updateTrackInfo(song) {
            trackTitle.textContent = song.title;
            trackArtist.textContent = song.artist;
            trackGenre.textContent = song.genre || 'Business Music';
            trackPlan.textContent = song.plan === 'abundance' ? 'Abundance Plan' : 'Business Music';
            
            if (song.duration) {
                totalTimeDisplay.textContent = song.duration;
            }
        }

        function showLoadError() {
            trackTitle.textContent = 'Demo Unavailable';
            trackArtist.textContent = 'Please contact for access';
            trackGenre.textContent = 'Demo';
            trackPlan.textContent = 'Contact Required';
            mainPlayBtn.disabled = true;
            mainPlayBtn.style.opacity = '0.5';
        }

        // Format time display
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        // Update progress bar
        function updateProgress() {
            if (demoAudio && !isNaN(demoAudio.duration)) {
                const progress = (demoAudio.currentTime / demoAudio.duration) * 100;
                progressFill.style.width = `${progress}%`;
                currentTimeDisplay.textContent = formatTime(demoAudio.currentTime);
                totalTimeDisplay.textContent = formatTime(demoAudio.duration);
            }
        }

        // Start audio playback
        function startPlayback() {
            if (!currentSong) {
                showDemoNotification();
                return;
            }

            isPlaying = true;
            mainPlayBtn.innerHTML = '‚è∏';
            albumArt.classList.add('playing');
            
            demoAudio.volume = volumeSlider.value / 100;
            
            const playPromise = demoAudio.play();
            if (playPromise !== undefined) {
                playPromise.then(() => {
                    console.log('Audio playing successfully');
                    progressInterval = setInterval(updateProgress, 100);
                }).catch(error => {
                    console.error('Audio play failed:', error);
                    pausePlayback();
                    alert('Audio playback failed. Please try again or contact support.');
                });
            }
        }

        // Pause audio playback
        function pausePlayback() {
            isPlaying = false;
            mainPlayBtn.innerHTML = '‚ñ∂';
            albumArt.classList.remove('playing');
            
            if (progressInterval) {
                clearInterval(progressInterval);
                progressInterval = null;
            }
            
            if (!demoAudio.paused) {
                demoAudio.pause();
            }
        }

        // Show demo completion notification
        function showDemoNotification() {
            demoNotification.classList.add('show');
        }

        // Close demo notification
        function closeDemoNotification() {
            demoNotification.classList.remove('show');
        }

        // Event Listeners
        mainPlayBtn.addEventListener('click', () => {
            if (isPlaying) {
                pausePlayback();
            } else {
                startPlayback();
            }
        });

        // Progress bar click
        progressBar.addEventListener('click', (e) => {
            if (demoAudio && !isNaN(demoAudio.duration)) {
                const rect = progressBar.getBoundingClientRect();
                const clickX = e.clientX - rect.left;
                const clickPercent = clickX / rect.width;
                demoAudio.currentTime = clickPercent * demoAudio.duration;
            }
        });

        // Control buttons
        document.getElementById('prevBtn').addEventListener('click', () => {
            alert('Previous track available with full subscription. Contact us for access!');
        });

        document.getElementById('nextBtn').addEventListener('click', () => {
            showDemoNotification();
        });

        document.getElementById('rewindBtn').addEventListener('click', () => {
            if (demoAudio && demoAudio.currentTime > 10) {
                demoAudio.currentTime -= 10;
            }
        });

        document.getElementById('forwardBtn').addEventListener('click', () => {
            if (demoAudio && demoAudio.currentTime < demoAudio.duration - 10) {
                demoAudio.currentTime += 10;
            }
        });

        // Volume controls
        volumeSlider.addEventListener('input', (e) => {
            const volume = e.target.value / 100;
            demoAudio.volume = volume;
            
            if (volume === 0) {
                volumeBtn.innerHTML = 'üîá';
            } else if (volume < 0.5) {
                volumeBtn.innerHTML = 'üîâ';
            } else {
                volumeBtn.innerHTML = 'üîä';
            }
        });

        volumeBtn.addEventListener('click', () => {
            if (demoAudio.volume > 0) {
                demoAudio.volume = 0;
                volumeSlider.value = 0;
                volumeBtn.innerHTML = 'üîá';
            } else {
                demoAudio.volume = 0.7;
                volumeSlider.value = 70;
                volumeBtn.innerHTML = 'üîä';
            }
        });

        // Audio event listeners
        demoAudio.addEventListener('loadedmetadata', () => {
            console.log('Audio metadata loaded');
            updateProgress();
        });

        demoAudio.addEventListener('ended', () => {
            pausePlayback();
            showDemoNotification();
        });

        demoAudio.addEventListener('error', (e) => {
            console.error('Audio error:', e);
            pausePlayback();
            showLoadError();
        });

        demoAudio.addEventListener('timeupdate', updateProgress);

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        }, { passive: true });

        // Initialize page
        document.addEventListener('DOMContentLoaded', () => {
            demoAudio.volume = 0.7;
            loadDemoSong();
            console.log('Soniq AI Demo Player initialized');
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (progressInterval) {
                clearInterval(progressInterval);
            }
            if (!demoAudio.paused) {
                demoAudio.pause();
            }
        });

        console.log('Soniq AI - Transforming businesses with AI-powered music');
    </script>

