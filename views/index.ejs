    <style>
        :root {
            --gold-primary: #C9A961;
            --gold-accent: #E4C988;
            --gold-bright: #F2E7A7;
            --gold-dark: #B8985A;
            --navy-deep: #0B0D17;
            --navy-medium: #151922;
            --navy-light: #1F2332;
            --purple-dark: #1A0B2E;
            --purple-medium: #2D1B4E;
            --black-rich: #000000;
            --white-pure: #FFFFFF;
            --white-soft: #F8F9FA;
            --gray-light: #8892A6;
            --gray-medium: #5C6B7D;
            --gray-dark: #404854;
            --surface-glass: rgba(255, 255, 255, 0.02);
            --surface-glass-hover: rgba(255, 255, 255, 0.05);
            --surface-glass-strong: rgba(255, 255, 255, 0.08);
            --border-glass: rgba(201, 169, 97, 0.12);
            --border-glass-hover: rgba(201, 169, 97, 0.25);
            --border-glass-strong: rgba(201, 169, 97, 0.35);
            --success-color: #22C55E;
            --warning-color: #F59E0B;
            --error-color: #EF4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--navy-deep);
            color: var(--white-pure);
            overflow-x: hidden;
            line-height: 1.6;
            font-weight: 300;
        }

        /* Background System */
        .background-system {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -2;
            background: linear-gradient(135deg, var(--navy-deep) 0%, var(--purple-dark) 50%, var(--navy-medium) 100%);
        }

        .mesh-gradient {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -1;
            background: 
                radial-gradient(circle at 20% 80%, rgba(201, 169, 97, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(45, 27, 78, 0.12) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(201, 169, 97, 0.05) 0%, transparent 50%);
            animation: meshFloat 25s ease-in-out infinite;
        }

        .floating-orbs {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -1;
            pointer-events: none;
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(201, 169, 97, 0.1) 0%, transparent 70%);
            animation: orbFloat 30s ease-in-out infinite;
        }

        .orb:nth-child(1) {
            width: 300px;
            height: 300px;
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .orb:nth-child(2) {
            width: 200px;
            height: 200px;
            top: 70%;
            right: 20%;
            animation-delay: -10s;
        }

        .orb:nth-child(3) {
            width: 150px;
            height: 150px;
            bottom: 30%;
            left: 70%;
            animation-delay: -20s;
        }

        /* Navigation */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            padding: 24px 0;
            z-index: 1000;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
        }

        .navbar.scrolled {
            background: rgba(11, 13, 23, 0.95);
            backdrop-filter: blur(24px) saturate(180%);
            border-bottom: 1px solid var(--border-glass);
            padding: 16px 0;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 48px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 28px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-bright) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -0.02em;
            cursor: pointer;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 32px;
            align-items: center;
        }

        .nav-link {
            color: var(--gray-light);
            text-decoration: none;
            font-weight: 400;
            font-size: 15px;
            letter-spacing: 0.01em;
            position: relative;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--white-pure);
        }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--gold-primary), var(--gold-accent));
            transition: width 0.4s cubic-bezier(0.23, 1, 0.320, 1);
        }

        .nav-link:hover::before, .nav-link.active::before {
            width: 100%;
        }

        .get-started-btn {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-accent));
            color: var(--black-rich);
            padding: 12px 24px;
            border-radius: 100px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
            box-shadow: 0 8px 32px rgba(201, 169, 97, 0.3);
            border: none;
            cursor: pointer;
            letter-spacing: -0.01em;
        }

        .get-started-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 48px rgba(201, 169, 97, 0.4);
        }

        /* Hero Section */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 120px 48px 0;
        }

        .hero-container {
            max-width: 1200px;
            text-align: center;
            position: relative;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: var(--surface-glass-strong);
            border: 1px solid var(--border-glass);
            border-radius: 100px;
            padding: 8px 20px;
            font-size: 13px;
            font-weight: 500;
            color: var(--gold-accent);
            margin-bottom: 32px;
            backdrop-filter: blur(20px);
            animation: fadeInUp 1s ease 0.2s both;
        }

        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: clamp(48px, 8vw, 84px);
            font-weight: 800;
            line-height: 0.95;
            margin-bottom: 24px;
            letter-spacing: -0.03em;
            background: linear-gradient(135deg, 
                var(--white-pure) 0%, 
                var(--gold-accent) 30%, 
                var(--gold-primary) 60%, 
                var(--gold-bright) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-size: 200% 200%;
            animation: gradientShift 6s ease-in-out infinite, fadeInUp 1s ease 0.4s both;
        }

        .hero-subtitle {
            font-family: 'Space Grotesk', sans-serif;
            font-size: clamp(18px, 3vw, 22px);
            font-weight: 500;
            color: var(--gold-primary);
            margin-bottom: 24px;
            letter-spacing: 0.01em;
            animation: fadeInUp 1s ease 0.6s both;
        }

        .hero-description {
            font-size: 18px;
            line-height: 1.7;
            color: var(--gray-light);
            max-width: 640px;
            margin: 0 auto 48px;
            font-weight: 300;
            animation: fadeInUp 1s ease 0.8s both;
        }

        .hero-actions {
            display: flex;
            gap: 20px;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            animation: fadeInUp 1s ease 1s both;
            margin-bottom: 80px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-accent));
            color: var(--black-rich);
            padding: 16px 32px;
            border-radius: 100px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
            box-shadow: 0 12px 40px rgba(201, 169, 97, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 20px 60px rgba(201, 169, 97, 0.5);
        }

        .btn-secondary {
            background: var(--surface-glass-strong);
            color: var(--white-pure);
            padding: 16px 32px;
            border: 1px solid var(--border-glass-hover);
            border-radius: 100px;
            font-weight: 500;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.4s ease;
            backdrop-filter: blur(20px);
            cursor: pointer;
        }

        .btn-secondary:hover {
            background: var(--surface-glass-hover);
            border-color: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(201, 169, 97, 0.2);
        }

        /* Demo Music Player */
        .demo-player {
            max-width: 900px;
            margin: 0 auto;
            background: var(--surface-glass-strong);
            border: 1px solid var(--border-glass-hover);
            border-radius: 24px;
            padding: 40px;
            backdrop-filter: blur(24px);
            box-shadow: 0 32px 80px rgba(0, 0, 0, 0.3);
            animation: fadeInUp 1s ease 1.2s both;
            position: relative;
            overflow: hidden;
        }

        .demo-player::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--gold-primary), transparent);
        }

        .demo-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .demo-title {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 24px;
            font-weight: 600;
            color: var(--white-pure);
            margin-bottom: 8px;
        }

        .demo-subtitle {
            font-size: 14px;
            color: var(--gold-accent);
            font-weight: 400;
        }

        .now-playing {
            background: linear-gradient(135deg, rgba(201, 169, 97, 0.1), rgba(201, 169, 97, 0.05));
            border: 1px solid rgba(201, 169, 97, 0.3);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .album-art {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-accent));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            flex-shrink: 0;
            position: relative;
            overflow: hidden;
        }

        .album-art.playing {
            animation: pulse 2s ease-in-out infinite;
        }

        .track-info {
            flex: 1;
        }

        .track-title {
            font-size: 20px;
            font-weight: 600;
            color: var(--white-pure);
            margin-bottom: 4px;
        }

        .track-artist {
            font-size: 16px;
            color: var(--gold-accent);
            margin-bottom: 8px;
        }

        .track-details {
            display: flex;
            gap: 16px;
            font-size: 12px;
            color: var(--gray-light);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .demo-badge {
            background: var(--warning-color);
            color: var(--black-rich);
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 10px;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .play-controls {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .main-play-btn {
            width: 60px;
            height: 60px;
            background: var(--gold-primary);
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 24px;
            color: var(--black-rich);
            box-shadow: 0 8px 24px rgba(201, 169, 97, 0.4);
        }

        .main-play-btn:hover {
            transform: scale(1.05);
            background: var(--gold-accent);
            box-shadow: 0 12px 32px rgba(201, 169, 97, 0.6);
        }

        .progress-container {
            background: var(--surface-glass);
            border: 1px solid var(--border-glass);
            border-radius: 12px;
            padding: 20px;
            backdrop-filter: blur(12px);
        }

        .time-display {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            font-size: 12px;
            color: var(--gray-light);
            font-weight: 500;
        }

        .demo-warning {
            color: var(--warning-color);
            font-weight: 600;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: var(--navy-light);
            border-radius: 3px;
            position: relative;
            cursor: pointer;
            margin-bottom: 16px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--gold-primary), var(--gold-accent));
            border-radius: 3px;
            width: 0%;
            transition: width 0.1s linear;
            position: relative;
        }

        .progress-fill::after {
            content: '';
            position: absolute;
            right: -6px;
            top: -3px;
            width: 12px;
            height: 12px;
            background: var(--gold-accent);
            border-radius: 50%;
            box-shadow: 0 2px 8px rgba(201, 169, 97, 0.5);
        }

        .control-buttons {
            display: flex;
            justify-content: center;
            gap: 16px;
            align-items: center;
        }

        .control-btn {
            background: none;
            border: none;
            color: var(--gray-light);
            font-size: 18px;
            cursor: pointer;
            padding: 8px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .control-btn:hover {
            background: var(--surface-glass-hover);
            color: var(--gold-accent);
            transform: scale(1.1);
        }

        .control-btn:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }

        .volume-control {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .volume-slider {
            width: 80px;
            height: 4px;
            background: var(--navy-light);
            border-radius: 2px;
            outline: none;
            cursor: pointer;
        }

        .demo-notification {
            background: var(--surface-glass-strong);
            border: 1px solid var(--gold-primary);
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            text-align: center;
            backdrop-filter: blur(20px);
            display: none;
            animation: slideInUp 0.5s ease;
        }

        .demo-notification.show {
            display: block;
        }

        .notification-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--gold-accent);
            margin-bottom: 8px;
        }

        .notification-text {
            font-size: 14px;
            color: var(--gray-light);
            margin-bottom: 16px;
        }

        .notification-actions {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .notification-btn {
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
        }

        .notification-btn.primary {
            background: var(--gold-primary);
            color: var(--black-rich);
        }

        .notification-btn.primary:hover {
            background: var(--gold-accent);
            transform: translateY(-1px);
        }

        .notification-btn.secondary {
            background: var(--surface-glass);
            color: var(--white-pure);
            border: 1px solid var(--border-glass);
        }

        .notification-btn.secondary:hover {
            background: var(--surface-glass-hover);
            border-color: var(--border-glass-hover);
        }

        /* Features Section */
        .features-section {
            padding: 120px 48px;
            position: relative;
        }

        .section-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 32px;
        }

        .feature-card {
            background: var(--surface-glass);
            border: 1px solid var(--border-glass);
            border-radius: 20px;
            padding: 32px;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
            backdrop-filter: blur(24px);
            position: relative;
            overflow: hidden;
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--gold-primary), transparent);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            border-color: var(--border-glass-hover);
            background: var(--surface-glass-hover);
            box-shadow: 0 32px 80px rgba(0, 0, 0, 0.2);
        }

        .feature-card:hover::before {
            opacity: 1;
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-accent));
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 24px;
            transition: transform 0.4s ease;
        }

        .feature-card:hover .feature-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .feature-title {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 16px;
            color: var(--white-pure);
            letter-spacing: -0.01em;
        }

        .feature-description {
            font-size: 15px;
            line-height: 1.6;
            color: var(--gray-light);
            font-weight: 300;
        }

        /* Footer */
        .footer {
            background: linear-gradient(135deg, var(--navy-deep) 0%, var(--purple-dark) 100%);
            border-top: 1px solid var(--border-glass);
            padding: 80px 48px 40px;
            position: relative;
            overflow: hidden;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 20%, rgba(201, 169, 97, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(45, 27, 78, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .footer-top {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            gap: 60px;
            margin-bottom: 60px;
        }

        .footer-brand {
            display: flex;
            flex-direction: column;
        }

        .footer-logo {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 32px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-bright) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -0.02em;
            margin-bottom: 16px;
        }

        .footer-tagline {
            font-family: 'Playfair Display', serif;
            font-size: 18px;
            font-weight: 500;
            color: var(--gold-accent);
            margin-bottom: 16px;
            font-style: italic;
        }

        .footer-description {
            font-size: 16px;
            line-height: 1.6;
            color: var(--gray-light);
            font-weight: 300;
            max-width: 400px;
        }

        .footer-column h4 {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 16px;
            font-weight: 600;
            color: var(--white-pure);
            margin-bottom: 20px;
            letter-spacing: -0.01em;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
            color: var(--gray-light);
            text-decoration: none;
            font-size: 14px;
            font-weight: 300;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .footer-links a:hover {
            color: var(--gold-accent);
            padding-left: 4px;
        }

        .footer-bottom {
            border-top: 1px solid var(--border-glass);
            padding-top: 32px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .footer-copyright {
            font-size: 14px;
            color: var(--gray-medium);
            font-weight: 300;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
